{
  "name": "minify-hex-code",
  "version": "1.0.1",
  "description": "Convert 6-character hex codes to 3-characters",
  "main": "index.js",
  "repository": "https://github.com/nielse63/minify-hex-code",
  "author": {
    "name": "Erik Nielsen",
    "email": "erik@312development.com",
    "url": "https://312development.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/nielse63/minify-hex-code",
  "keywords": [
    "css",
    "hex",
    "minify",
    "code",
    "shorten"
  ],
  "bugs": "https://github.com/nielse63/minify-hex-code/issues",
  "scripts": {
    "lint": "eslint src ./*.js --ignore-pattern '!.eslintrc.js'",
    "minify": "uglifyjs lib/minify-hex-code.js -m -c -o lib/minify-hex-code.min.js",
    "rollup": "rollup --input lib/minify-hex-code.js --format umd --output lib/minify-hex-code.js",
    "prebuild": "rm -rf lib && npm run lint && mkdir lib",
    "build": "babel src -d lib",
    "postbuild": "npm run rollup && npm run minify",
    "pretest": "rm -rf .nyc_output coverage *.log",
    "test": "nyc mocha test/index.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "prepublishOnly": "npm test && npm run build"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.24.1",
    "chai": "^4.0.2",
    "chai-asserttype": "^1.0.5",
    "chai-deep-match": "^1.0.2",
    "coveralls": "^2.13.1",
    "eslint": "^4.1.1",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.7.0",
    "mocha": "^3.4.2",
    "nyc": "^11.0.3",
    "rollup": "^0.45.0",
    "uglify-js": "^3.0.24"
  },
  "engines": {
    "node": ">= 8.x",
    "npm": ">= 5.x"
  }
}
